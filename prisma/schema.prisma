generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Catalogo {
  id        Int       @id @default(autoincrement())
  nome      String
  url       String    @unique
  produtos  Produto[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Produto {
  id         Int     @id @default(autoincrement())
  linha      String?
  referencia String?
  aplicacoes String?

  Catalogo   Catalogo? @relation(fields: [catalogoId], references: [id])
  catalogoId Int?

  equivalencias          Equivalencia[]
  atributos              Atributo[]
  aplicacoesRelacionadas Aplicacao[]
}

model TipoAtributo {
  id       Int        @id @default(autoincrement())
  nome     String
  Atributo Atributo[]
}

model Atributo {
  id Int @id @default(autoincrement())

  valor String

  tipo   TipoAtributo? @relation(fields: [tipoId], references: [id])
  tipoId Int?

  produto   Produto? @relation(fields: [produtoId], references: [id])
  produtoId Int?
}

model Aplicacao {
  id          Int      @id @default(autoincrement())
  modelo      Modelo?  @relation(fields: [modeloId], references: [id])
  modeloId    Int?
  ano         String?
  complemento String?
  observacao  String?
  produto     Produto? @relation(fields: [produtoId], references: [id])
  produtoId   Int?
}

model Modelo {
  id   Int    @id @default(autoincrement())
  nome String

  montadora   Montadora? @relation(fields: [montadoraId], references: [id])
  montadoraId Int?

  aplicacoes Aplicacao[]
}

model Montadora {
  id      Int      @id @default(autoincrement())
  nome    String
  modelos Modelo[]
}

model Equivalencia {
  id     Int     @id @default(autoincrement())
  marca  String?
  codigo String

  produto   Produto? @relation(fields: [produtoId], references: [id])
  produtoId Int?
}
